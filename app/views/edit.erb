<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>braindump.io</title>

    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="/css/style.css" type="text/css" rel="stylesheet" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>
  <body>
    <div class="container">
      <div class="page-header">
        <h1>BrainDump.io <small><%= session[:email] %></small></h1>
      </div>

      <div>
        <form method="post" class="form-vertical" action="/edit/<%= @entries.first.uuid %>">
          <textarea name="text" class="input-xlarge span12" style="height: 250px;"><%= @entries.first.text %></textarea>
          <button type="submit" class="btn btn-primary btn-large">Update</button>
        </form>
      </div>

      <h2>Old Versions</h2>
      <% @entries.each do |entry| %>
        <div class="well">
          <img src="<%= gravatar entry.email %>" title="<%= entry.email %>" alt="<%= entry.email %>'s gravatar" class="gravatar" />
          <a href="/id/<%= entry.uuid %>"><%= fmt_date entry.updated_at %></a>: <%= entry.text %>
        </div>
      <% end %>

    </div> <!-- /container -->

    <!-- JS. Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
